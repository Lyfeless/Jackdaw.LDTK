<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <Title>Jackdaw.LDTK</Title>
    <Version>0.2.0</Version>
    <Authors>Lyfeless</Authors>
    <Description>An extension for importing LDTK projects into Jackdaw games.</Description>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/Lyfeless/Jackdaw.LDTK</RepositoryUrl>

    <PackageId>JackdawEngine.LDTK</PackageId>
    <PackageProjectUrl>https://github.com/Lyfeless/Jackdaw.LDTK</PackageProjectUrl>
    <PackageTags>Jackdaw;Foster;LDTK</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JackdawEngine" Version="0.2.2" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(ProjectDir)..\LICENSE" Pack="true" PackagePath="/" />
    <None Include="$(ProjectDir)..\README.md" Pack="true" PackagePath="/" />
  </ItemGroup>
</Project>
